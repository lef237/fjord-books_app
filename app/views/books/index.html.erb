<p id="notice"><%= notice %></p>

<h1><%= t('.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('Title') %></th>
      <th><%= t('Memo') %></th>
      <th><%= t('Author') %></th>
      <th><%= t('Picture') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.memo %></td>
        <td><%= book.author %></td>
        <td><%= book.picture %></td>
        <td><%= link_to t('views.show'), book %></td>
        <td><%= link_to t('views.edit'), edit_book_path(book) %></td>
        <td><%= link_to t('views.destroy'), book, method: :delete, data: { confirm: t('views.are_you_sure') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('books.new.title'), new_book_path %>
