<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <p class="navbar-text pull-right">
      <% if user_signed_in? %>
        Logged in as <strong><%= current_user.email %></strong>.
        <%= link_to t('navbar.edit_profile'), edit_user_registration_path, class: 'navbar-link' %> |
        <%= link_to t('navbar.logout'), destroy_user_session_path, method: :delete, class: 'navbar-link'  %>
        <%= link_to t('navbar.users'), users_path %>
        <%= link_to t('navbar.my_page'), user_path(current_user) %>
        <%= link_to t('navbar.books'), books_path %>
      <% else %>
        <%= link_to t('navbar.sign_up'), new_user_registration_path, class: 'navbar-link'  %> |
        <%= link_to t('navbar.login'), new_user_session_path, class: 'navbar-link'  %>
      <% end %>
    </p>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
