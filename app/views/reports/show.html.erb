<h1><%= t('views.common.title_show', name: Report.model_name.human) %></h1>

<p>
  <strong>Title:</strong>
  <%= @report.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @report.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @report.user_id %>
</p>

<% if @report.user == current_user %>
  <%= link_to t('views.common.edit'), edit_report_path(@report) %> |
<% end %>

<%= link_to t('views.common.back'), reports_path %>

<%= render partial: 'comments/report_comments', locals: {comment: @comment, comments: @comments, commentable: @report} %>

